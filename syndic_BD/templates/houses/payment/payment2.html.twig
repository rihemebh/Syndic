{% extends 'houses/payment/paymentBase.html.twig' %}
{% block stylesheets %}
    <style>
        .navbar{
            opacity:0.9;
        }
        body{
            background-color: #343a40;
        }

        .active {
            color:#0099ff;
        }
    </style>
{% endblock %}


{% block body %}
{{ parent() }}
<div class="container">
    <div class="row">
        <div class="col flex-column" style="margin-left: 47%">
            <a href="/payment">   <i class="fas fa-circle   small " style="color:lightgrey"> </i></a>
            <i class="fas fa-circle  small active " > </i>

            <i class="fas fa-circle  small "style="color:lightgrey"></i>


        </div>
    </div>
</div>
<div class="container" style="height:100px"></div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-3">

            </div>
            <div class="col-6">
                <label class="text-white " style="font-family: 'EB Garamond', serif"> Choisir un mois : <br>
